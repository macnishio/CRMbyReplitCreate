[[workflows.workflow]]
name = "Create and Apply Migration"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "flask db migrate -m 'Add UserSettings model' && flask db upgrade"

[[workflows.workflow]]
name = "Flask Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 app.py"
waitForPort = 5000

[[workflows.workflow]]
name = "Init Database"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "flask db init && flask db migrate -m 'Initial migration' && flask db upgrade"

[[workflows.workflow]]
name = "Database Migration"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "flask db migrate -m 'Add missing columns' && flask db upgrade"

[[workflows.workflow]]
name = "Database Fix"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "flask db init && flask db migrate -m 'Fix email schema' && flask db upgrade"

[[workflows.workflow]]
name = "Fix Database Schema"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "rm -rf migrations && flask db init && flask db migrate -m 'Fix email schema' && flask db upgrade"

[[workflows.workflow]]
name = "Clean and Migrate"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "rm -rf migrations && flask db init && flask db migrate -m 'Email schema update' && flask db upgrade"

[deployment]
run = ["sh", "-c", "python3 app.py"]

[[ports]]
localPort = 5000
externalPort = 80
exposeLocalhost = true

[[ports]]
localPort = 5001
externalPort = 3000

[[ports]]
localPort = 5002
externalPort = 3001
